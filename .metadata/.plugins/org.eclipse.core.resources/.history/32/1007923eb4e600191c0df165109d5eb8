#include<iostream>
#include<iomanip>
#include<cmath>
void timeConverter(double seconds);
using namespace std;
int main(){
	//call anything you want here
	timeConverter(30562);
}

void timeConverter(double seconds){
	double hours =  floor(seconds/3600);
	double minutes = floor(((seconds/3600)-hours)*60);
	double seconds_= abs(minutes-(((seconds/3600)-hours)*60));


	cout<<"hours"<<hours<<endl;
	cout<<"minutes"<<minutes<<endl;
	cout<<"seconds"<<seconds_<<endl;
}


